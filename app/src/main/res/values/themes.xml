<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Peliculas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#333940</item>
        <item name="colorPrimaryVariant">#333940</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#333940</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="shadoweffect"> <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#C8D0FF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>
        <!-- Base application theme. -->
        <style name="Theme.Series" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/title</item>
            <item name="colorPrimaryVariant">@color/title</item>
            <item name="colorOnPrimary">@color/black</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/title</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
            <!-- Customize your theme here. -->
        </style>



<style name="Widget.Peliculas.Toolbar" parent="Widget.AppCompat.Toolbar">
            <item name="android:background">#2D4B65</item>
            <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
            <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
            <item name="titleTextAppearance">@style/TextAppearance.Series.Toolbar</item>
        </style>

        <style name="TextAppearance.Series.Toolbar" parent="TextAppearance.MaterialComponents.Button">
            <item name="android:textSize">16sp</item>
        </style>

        <style name="Widget.Series.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <item name="hintTextAppearance">@style/TextAppearance.Series.TextInputLayout.HintText</item>
            <item name="hintTextColor">@color/title</item>

            <item name="boxStrokeColor">@color/title</item>
        </style>

        <style name="TextAppearance.Series.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
            <item name="android:textColor">@color/title</item>
        </style>

        <style name="TextAppearance.Series.Title" parent="TextAppearance.MaterialComponents.Headline5">
            <item name="textAllCaps">true</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/title</item>
        </style>
</resources>